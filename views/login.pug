doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description' content='')
  meta(name='author' content='')
  title Login onny bus
  link(href='css/styles.css' rel='stylesheet')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js' crossorigin='anonymous')
#layoutAuthentication
  #layoutAuthentication_content
    main
      .container
        .row.justify-content-center
          .col-lg-5
            .card.shadow-lg.border-0.rounded-lg.mt-5
              .card-header
                h3.text-center.font-weight-light.my-4 Login
              .card-body
                if error
                  .alert.alert-danger=error
                form(method="post" action="/login")#form
                  .form-group
                    label.small.mb-1(for='inputCc') CC
                    input#inputCc.form-control.py-4(type='number' placeholder='ingrese su cedula' name="cc")
                  .form-group
                    label.small.mb-1(for='inputPassword') Password
                    input#inputPassword.form-control.py-4(type='password' placeholder='Enter password' name="password")
                  .form-group.d-flex.align-items-center.justify-content-between.mt-4.mb-0
                    button(type="submit")#submitLogin.btn.btn-primary Login
  #layoutAuthentication_footer
    footer.py-4.bg-light.mt-auto
      .container-fluid
        .d-flex.align-items-center.justify-content-between.small
          .text-muted Copyright &copy;onny bus 2020
          div
            a(href='#') politicas de privacidad
            |  &middot;
            a(href='#') terminos &amp; condiciones
