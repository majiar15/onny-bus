extends ./../layouts/dashboard.pug
block main
  #layoutSidenav_content
    main
      .container-fluid
        // quiero cargar las cosas aqui
        if type == 'registro'
          h1.mt-4 Registro Rutas
        else if type == "update"
          h1.mt-4 Actualizar Rutas
        if error
          span.d-flex.justify-content-center.alert.alert-danger
            =error
        if message
          span.d-flex.justify-content-center.alert.alert-success
            =message
        form(action=`/ruta/${type}` method='post')
          .form-group
            .row
              .col-md-6.col-lg-7
                label(for='nombre') Nombre
                if ruta
                  input#nombre.form-control(type='text' name='nombre' value=`${ruta.nombre}`)
                else
                  input#nombre.form-control(type='text' name='nombre')
            .form-group
              .row
                .col-md-6.col-lg-7
                  label(for='nombre') latitud
                  if ruta
                    textarea.form-control(name="latitud", cols="20", rows="5")= ruta.latitud
                  else
                    textarea.form-control(name="latitud", cols="20", rows="5")
            .form-group
              .row
                .col-md-6.col-lg-7
                  label(for='nombre') longitud
                  if ruta
                    textarea.form-control(name="longitud", cols="20", rows="5" )=ruta.longitud
                    input(type="hidden", name="id" value=`${ruta.id}`)
                  else
                    textarea.form-control(name="longitud", cols="20", rows="5")            
          input.btn.btn-primary.mb-4(type='submit' value='Enviar')
        audio#audio
          source(type='audio/mp3' src='../../assets/mp3/alert.mp3')      
    footer.py-4.bg-light.mt-auto
      .container-fluid
        .d-flex.align-items-center.justify-content-between.small
          .text-muted Copyright &copy;onny bus 2020
          div
            a(href='#') politicas de privacidad
            |  &middot;
            a(href='#') terminos &amp; condiciones
