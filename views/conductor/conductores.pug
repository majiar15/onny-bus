extends ./../layouts/dashboard.pug
block headBlock
  link(href='/css/paginationStyle.css' rel='stylesheet')
block main
  #layoutSidenav_content
    main
      .container
        h1.mt-4
          | Conductores
 
        // quiero cargar las cosas aqui

        table.table
          thead.thead-light
            tr
              th(scope='col') CC
              th(scope='col') Nombres
              th(scope='col') Apellidos
              th(scope='col') Email
              th(scope='col') Acciones
          tbody
            each conductor in context.conductores 
              tr
                th(scope='row')= conductor.cc
                td= conductor.nombres
                td= conductor.apellidos
                td= conductor.email
                td
                  a(href=`/conductor/update/${conductor._id}`).btn.btn-warning Update
                  a(href=`/conductor/remove/${conductor._id}`).btn.btn-danger remove
        ul.pagination.justify-content-end.danger
          if context.num_pages > 1
            if context.num_page != 1 
              li.page-item
                a.page-link(href=`/conductor/page/${context.num_page-1}`)
                  <span aria-hidden="true">&laquo;</span>
            - let index = 1; 
            - for (let index=1; index<=context.num_pages; index++)
              if context.num_page === index
                li.page-item.active
                  a.page-link(href="#")= index
              else
                li.page-item
                  a.page-link(href=`/conductor/page/${index}`)= index
            if context.num_page != context.num_pages
              li.page-item
                a.page-link(href=`/conductor/page/${index+1}`)
                  <span aria-hidden="true">&raquo;</span>
              
          
                            
        
        
 
        
