extends ./../layouts/dashboard.pug
block main
  #layoutSidenav_content
    main
      .container-fluid
        // quiero cargar las cosas aqui
        if type == 'registro'
          h1.mt-4 Registro Conductor
        else if type == "update"
          h1.mt-4 Actualizar Conductor
        if error
          span.d-flex.justify-content-center.alert.alert-danger
            =error
        if message
          span.d-flex.justify-content-center.alert.alert-success
            =message
        form(action=`/conductor/${type}` method='post')
          .form-group
            .row
              .col-md-6.col-lg-7
                label(for='nombre') Nombre
                if conductor
                  input#nombre.form-control(type='text' name='nombres' value=`${conductor.nombres}` required)
                else
                  input#nombre.form-control(type='text' name='nombres' required)
          .form-group
            .row
              .col-md-6.col-lg-7
                label(for='apellido') Apellidos
                if conductor
                  input#nombre.form-control(type='text' name='apellidos' value=`${conductor.apellidos}` required)
                else
                  input#apellido.form-control(type='text' name='apellidos' required)
          if conductor
            input#nombre.form-control(type='hidden' minlength="7" name='cc' value=`${conductor.cc}` required)
            input#nombre.form-control(type='hidden' name='id' value=`${conductor._id}` required)
          else
            .form-group
              .row
                .col-md-6.col-lg-7
                  label(for='cc') CC
                  input#email.form-control(type='number' minlength="7" name='cc' required)
          .form-group
            .row
              .col-md-6.col-lg-7
                label(for='email') Email
                if conductor
                  input#nombre.form-control(type='email' name='email' value=`${conductor.email}` required)
                else
                  input#email.form-control(type='email' name='email' required)
          .form-group
            .row
              .col-md-6.col-lg-7
                label(for='password') Contrase&ntilde;a
                if conductor
                  input#nombre.form-control(type='password' name='password' value=`${conductor.password}` required)
                else
                  input#password.form-control(type='password'  name='password' required)
          if type !='update'
            .form-group
              .row
                .col-md-6.col-lg-7
                  label(for='confirmar_pass') Confirmar contrase&ntilde;a
                  input#confirmar_pass.form-control(type='password' name='confirmpassword' required)
          input.btn.btn-primary.mb-4(type='submit' value='Enviar')
        audio#audio
          source(type='audio/mp3' src='../../assets/mp3/alert.mp3')      
    footer.py-4.bg-light.mt-auto
      .container-fluid
        .d-flex.align-items-center.justify-content-between.small
          .text-muted Copyright &copy;onny bus 2020
          div
            a(href='#') politicas de privacidad
            |  &middot;
            a(href='#') terminos &amp; condiciones
